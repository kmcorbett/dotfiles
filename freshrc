# freshshell.com
# See http://freshshell.com/readme for documentation.

# Update fresh itself
fresh freshshell/fresh bin/fresh --bin

# Fresh from local .dotfiles
fresh bashrc --file
fresh bash_profile --file
fresh tmux.conf --file
fresh ssh-config --file=~/.ssh/config-example

# Emacs
fresh emacs/init.el --file=~/.emacs.d/init.el

# Git config 
# Some global git config settings vary per host
# TODO: Assemble from parts?
# fresh gitconfig --file
fresh gitconfig --file=~/.gitconfig-kmc

# Verisk inits
# TODO: separate repo?
fresh measuresengine/dtinit --file=~/.dtinit
fresh measuresengine/tunnel2code.sh --file=~/bin/tunnel2code.sh

